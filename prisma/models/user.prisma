// ============================================
// User Model
// ============================================
model User {
  id          Int       @id @default(autoincrement())
  username    String?
  uid         String?   @unique
  password    String?
  email       String?   @unique
  phoneNumber String?
  permission  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  userShops  UserShop[]
  inventory  Inventory[]
}

